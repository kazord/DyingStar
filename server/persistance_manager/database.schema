# ==== Champs communs ====
uuid: string @index(hash) .    # Identifiant unique
name: string @index(exact, term) .      # Nom de l'entité
parent: uid @reverse .                  # Relation hiérarchique enfant -> parent
position: uid .                         # Lien vers un nœud Position
type_obj: string .
# ==== Champs Position ====
x: float .                               
y: float .                                
z: float .                             
rx: float .
ry: float .
rz: float .
# ==== Types ====
type Position {
  x
  y
  z
  rx
  ry
  rz
}

type Entity {                             # Type générique
  uuid
  parent
  type_obj
}

type Planete {
  uuid
  name
  <~parent> 
  type_obj                          
}